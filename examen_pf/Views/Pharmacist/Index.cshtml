@model IEnumerable<examen_pf.Models.Pharmacist>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Pharmacist List</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        
        

<p>
    <a asp-action="Create">+Add New Pharmacist</a>
</p>

            <table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr>
                    <th>
                        ID
                    </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                            
                            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i>Details</a> 
                            
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>